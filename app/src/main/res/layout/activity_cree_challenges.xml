<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color">

    <org.mapsforge.map.android.view.MapView
        android:id="@+id/mapId"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        />
    <Button
        android:id="@+id/btAddChalng"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_add_circle_black_24dp"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/blue_normal"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvstartDate"
        android:text="Date de DÃ©but : "
        android:layout_below="@id/mapId"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mapId"
        android:layout_toRightOf="@id/tvstartDate"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:hint="01/01/2020"
        android:id="@+id/edStartDate"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEndDate"
        android:text="Date de la fin : "
        android:layout_below="@id/tvstartDate"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvstartDate"
        android:layout_toRightOf="@id/tvstartDate"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:hint="10/01/2020"
        android:id="@+id/edEndDate"
        />
</RelativeLayout>